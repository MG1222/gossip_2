<div class="card text-center mx-auto my-2" style="max-width: 50rem;">

  <div class="card-body">
    <%= form_tag users_path, method: "post", class: "form-group" do %>
     <% form_authenticity_token %>

      <div class="form-group form-check">	
      	<h4>Creer ton compte</h4>
        <%= label_tag 'Prénom' %>
        <%= text_field_tag 'first_name', nil, class: "form-control" %>
      </div>

      <div class="form-group form-check">
        <%= label_tag 'Nom' %>
        <%= text_field_tag 'last_name', nil, class: "form-control" %>
      </div>

      <div class="form-group form-check">
        <%= label_tag 'Email' %>
        <%= text_field_tag 'email', nil, class: "form-control" %>
      </div>

      <div class="form-group form-check">
        <%= label_tag 'Mot de passe' %>
        <%= text_field_tag 'password', nil, class: "form-control" %>
      </div>

      <div class="form-group form-check">
        <%= label_tag 'Confirmation du mot de passe' %>
        <%= text_field_tag 'password_confirmation', nil, class: "form-control" %> 
	

      </div> 
      <% link_to users_path %> 
   <%= submit_tag "Créer", class: "btn btn-primary" %><br>
    <% end %>
  </div>
</div>



