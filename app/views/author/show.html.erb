<!-- author -->
<div class="card-body">
    <h5 class="card-title">Auteur</h5>
    <p class="card-text"><%= @user.first_name %> <%= @user.last_name %></p>
</div>
  <div class="card-body">
    <h5 class="card-title">Email</h5>
    <p class="card-text"><%= @user.email %></p>
  </div>
  <div class="card-body">
    <h5 class="card-title">Ville</h5>
    <p class="card-text"><%= @user.city.name %> (<%= @user.city.zip_code %>)</p>
    <% User.find(params[:author_id]).gossips.to_a.each do |gossip| %> 
  <ul class="h6">
    <li> Le titre: <%= gossip.title %> </li>
    <li> Le lien: <%= link_to "ici", gossip_path(gossip.id) %> </li>
    </ul>
  <% end %>

  </div>
</div>